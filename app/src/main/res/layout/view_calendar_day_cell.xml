<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_calendar_cell"
    android:addStatesFromChildren="true">
<!--<merge xmlns:android="http://schemas.android.com/apk/res/android">-->

    <FrameLayout
        android:id="@+id/layout_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtCellGregorian"
            style="@style/style_calendar_cell_gregorian"
            android:text="demo" />

        <ImageView
            android:id="@+id/imgCellHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:contentDescription="cell hint" />

    </FrameLayout>

    <TextView
        android:id="@+id/txtCellLunar"
        style="@style/style_calendar_cell_lunar"
        android:visibility="gone"
        android:text="demo" />
</LinearLayout>
