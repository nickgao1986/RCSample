<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/general_list_view_item_height"
    android:background="@drawable/bg_list_item_divider"
    android:cacheColorHint="@color/transparentColor"
    android:clickable="false"
    android:focusable="false">

    <LinearLayout
        android:id="@+id/button_area"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true">

        <ToggleButton
            android:id="@+id/calls_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/default_padding_to_side"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/btn_dnd_selector"
            android:textOff=""
            android:textOn=""/>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/default_padding_to_side"
            android:scaleType="center"
            android:src="@drawable/icon_chevron"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="calls"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/button_area"
        android:layout_alignParentLeft="true"
        android:paddingRight="@dimen/default_text_padding_side"
        android:textSize="@dimen/font_size_medium"/>

</RelativeLayout>